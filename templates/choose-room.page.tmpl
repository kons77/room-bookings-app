{{template "base" .}} 


{{define "content"}}

<style>
    .card-link {
        color: inherit;
        text-decoration: none;
    }
    .card-link:hover {
        text-decoration: none;
    }
    .card {
        transition: transform 0.2s ease;
    }
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class mb-6>Choose a Room</h1>
        </div>
    </div>
    <div class="row">            

        {{$rooms := index .Data "rooms" }}
        {{$roomImages := index .Data "roomImages"}}

        {{range $rooms }}
        <div class="col-md-6 mb-4">
            <a href="/choose-room/{{.ID}}" class="card-link">
                <div class="card h-100">
                    <img src="/static/images/{{index $roomImages .ID}}" class="card-img-top" alt="{{.RoomName}}">
                    <div class="card-body">
                        <h5 class="card-title">{{.RoomName}}</h5>
                        <p class="card-text">{{.RoomName}}</p>
                        
                    </div>
                </div>
            </a>
        </div>
        {{end}}
    </div>
</div>  

{{end}}
